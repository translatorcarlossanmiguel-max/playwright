{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "utils/**/*.ts",
    "pages/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}
